.top {
  width: 680rpx;
  height: 160rpx;
  border-bottom: 30rpx solid #f2f2f2;
  display: flex;
  padding: 60rpx;
}
.top .img {
  width: 140rpx;
  height: 140rpx;
  border: 1px solid #f2f2f2;
  border-radius: 60rpx;
  background: url(data:image/png;base64,) no-repeat center center;
  background-color: #f2f2f2;
  background-size: cover;
  margin: 5px 10px 5px 0;
}
.content {
  width: 100%;
}
.content .item {
